<Window x:Class="KafeProject.All_Windows.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Klaviatura" Height="200" Width="400" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"  Topmost="{Binding Source={x:Static Application.Current},Path=MainWindow.IsActive,Mode=OneWay}">
    <Grid>
        <Image Style="{DynamicResource ImageFon}"/>
        <Grid Margin="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <Grid.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.5" ShadowDepth="7" Direction="272"/>
            </Grid.Effect>
            <TextBlock x:Name="TextName" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="370" TextAlignment="Center" TextWrapping="Wrap" FontSize="17"/>
            <Button VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Center" Style="{DynamicResource Button_B}" Content="Закрыть" Width="250" Height="40" Grid.Row="1" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
